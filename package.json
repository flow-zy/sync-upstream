{
  "name": "sync-upstream",
  "version": "0.0.2",
  "packageManager": "pnpm@10.12.4",
  "description": "A tool for synchronizing code with upstream repositories with incremental updates and parallel processing.",
  "author": "flow-zy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/flow-zy/sync-upstream.git"
  },
  "keywords": [
    "sync",
    "upstream",
    "git",
    "incremental",
    "parallel"
  ],
  "main": "dist/index.js",
  "bin": {
    "sync-upstream": "dist/index.cjs"
  },
  "files": [
    "README.md",
    "bin",
    "dist",
    "package.json"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts,.js",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "prepublishOnly": "pnpm run build",
    "release": "standard-version",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:prerelease": "standard-version --prerelease",
    "release:beta": "standard-version --prerelease=beta",
    "release:alpha": "standard-version --prerelease=alpha",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "chalk": "^5.5.0",
    "consola": "^3.4.2",
    "date-fns": "^4.1.0",
    "fs-extra": "^11.3.0",
    "js-yaml": "^4.1.0",
    "micromatch": "^4.0.8",
    "minimist": "^1.2.8",
    "p-limit": "^6.2.0",
    "prompts": "^2.4.2",
    "simple-git": "^3.28.0",
    "smol-toml": "^1.4.2",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.1.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/micromatch": "^4.0.9",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.1.0",
    "@types/prompts": "^2.4.9",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-shebang": "^0.1.5",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vitepress": "^1.6.4"
  }
}

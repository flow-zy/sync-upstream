#!/usr/bin/env node

// 检查是否已编译
const fs = require('fs');
const path = require('path');

const distPath = path.join(__dirname, '..', 'dist', 'index.cjs');
const srcPath = path.join(__dirname, '..', 'src', 'cli.ts');

// 如果存在编译后的文件，则使用它
if (fs.existsSync(distPath)) {
  require(distPath);
} else {
  // 否则，提示用户先编译
  console.error('错误: 未找到编译后的文件。请先运行 "pnpm build" 命令。');
  process.exit(1);
}